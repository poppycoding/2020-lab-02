<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xlasers.opening.modules.sys.mapper.SysMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xlasers.opening.modules.sys.entity.SysMenuDO">
        <id column="menu_id" property="menuId"/>
        <result column="parent_id" property="parentId"/>
        <result column="name" property="name"/>
        <result column="url" property="url"/>
        <result column="perms" property="perms"/>
        <result column="type" property="type"/>
        <result column="icon" property="icon"/>
        <result column="order_num" property="orderNum"/>
    </resultMap>

    <select id="listAllPermsByUserId" resultType="java.lang.String">

    </select>

    <select id="listAllMenuId" resultType="java.lang.Long">

    </select>

    <select id="getByUserName"
            resultType="com.xlasers.opening.modules.sys.entity.SysUserDO">

    </select>

    <!--根据parent id 查询实体-->
    <select id="listMenuByParentId"
            resultType="com.xlasers.opening.modules.sys.entity.SysMenuDO">
        SELECT * FROM sys_menu where parent_id = #{id}
    </select>

    <!--获取非菜单按钮-->
    <select id="listMenuNotButton"
            resultType="com.xlasers.opening.modules.sys.entity.SysMenuDO">
        SELECT * FROM sys_menu WHERE type != 2
    </select>

</mapper>
